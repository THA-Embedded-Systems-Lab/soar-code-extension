{
  "name": "soar",
  "displayName": "Soar",
  "description": "Soar language support with LSP, datamap tools, and syntax highlighting",
  "version": "0.1.4",
  "publisher": "soar-group",
  "repository": {
    "type": "git",
    "url": "https://github.com/SoarGroup/soar-vscode-extension"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "soar",
    "cognitive architecture",
    "language-server",
    "datamap"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "soar",
        "aliases": [
          "Soar",
          "soar"
        ],
        "extensions": [
          ".soar"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "soar",
        "scopeName": "source.soar",
        "path": "./syntaxes/soar.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "soar",
        "path": "./snippets/soar.json"
      }
    ],
    "commands": [
      {
        "command": "soar.helloWorld",
        "title": "Hello World",
        "category": "Soar"
      },
      {
        "command": "soar.restartLanguageServer",
        "title": "Restart Language Server",
        "category": "Soar"
      },
      {
        "command": "soar.refreshDatamap",
        "title": "Refresh Datamap",
        "category": "Soar",
        "icon": "$(refresh)"
      },
      {
        "command": "soar.loadDatamap",
        "title": "Load Datamap",
        "category": "Soar"
      },
      {
        "command": "soar.validateAgainstDatamap",
        "title": "Validate Against Datamap",
        "category": "Soar",
        "icon": "$(check)"
      },
      {
        "command": "soar.validateWorkspaceAgainstDatamap",
        "title": "Validate Workspace Against Datamap",
        "category": "Soar",
        "icon": "$(checklist)"
      },
      {
        "command": "soar.addAttribute",
        "title": "Add Attribute",
        "category": "Soar",
        "icon": "$(add)"
      },
      {
        "command": "soar.editAttribute",
        "title": "Edit Attribute",
        "category": "Soar",
        "icon": "$(edit)"
      },
      {
        "command": "soar.deleteAttribute",
        "title": "Delete Attribute",
        "category": "Soar",
        "icon": "$(trash)"
      },
      {
        "command": "soar.refreshLayout",
        "title": "Refresh Project Structure",
        "category": "Soar",
        "icon": "$(refresh)"
      },
      {
        "command": "soar.addOperator",
        "title": "Add Operator",
        "category": "Soar",
        "icon": "$(symbol-method)"
      },
      {
        "command": "soar.addSubstate",
        "title": "Add Substate",
        "category": "Soar",
        "icon": "$(symbol-operator)"
      },
      {
        "command": "soar.addFile",
        "title": "Add File",
        "category": "Soar",
        "icon": "$(file-add)"
      },
      {
        "command": "soar.addFolder",
        "title": "Add Folder",
        "category": "Soar",
        "icon": "$(new-folder)"
      },
      {
        "command": "soar.renameNode",
        "title": "Rename",
        "category": "Soar",
        "icon": "$(edit)"
      },
      {
        "command": "soar.deleteNode",
        "title": "Delete",
        "category": "Soar",
        "icon": "$(trash)"
      },
      {
        "command": "soar.findOrphanedFiles",
        "title": "Find Orphaned Files",
        "category": "Soar",
        "icon": "$(search)"
      },
      {
        "command": "soar.syncProjectFiles",
        "title": "Sync Project Files",
        "category": "Soar",
        "icon": "$(sync)"
      },
      {
        "command": "soar.viewDatamap",
        "title": "View Datamap",
        "category": "Soar",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "soar.viewRootDatamap",
        "title": "View Root Datamap",
        "category": "Soar",
        "icon": "$(home)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "soar-explorer",
          "title": "Soar",
          "icon": "$(circuit-board)"
        }
      ]
    },
    "views": {
      "soar-explorer": [
        {
          "id": "soarLayout",
          "name": "Project Structure",
          "icon": "$(folder-library)",
          "contextualTitle": "Soar Project Structure"
        },
        {
          "id": "soarDatamap",
          "name": "Datamap",
          "icon": "$(type-hierarchy)",
          "contextualTitle": "Soar Datamap"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "soar.refreshDatamap",
          "when": "view == soarDatamap",
          "group": "navigation@1"
        },
        {
          "command": "soar.viewRootDatamap",
          "when": "view == soarDatamap",
          "group": "navigation@2"
        },
        {
          "command": "soar.refreshLayout",
          "when": "view == soarLayout",
          "group": "navigation@1"
        },
        {
          "command": "soar.findOrphanedFiles",
          "when": "view == soarLayout",
          "group": "navigation@2"
        },
        {
          "command": "soar.syncProjectFiles",
          "when": "view == soarLayout",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "soar.addAttribute",
          "when": "view == soarDatamap && viewItem =~ /^datamap-(root|attribute-soar_id)$/",
          "group": "1_modification@1"
        },
        {
          "command": "soar.editAttribute",
          "when": "view == soarDatamap && viewItem =~ /^datamap-attribute-/",
          "group": "1_modification@2"
        },
        {
          "command": "soar.deleteAttribute",
          "when": "view == soarDatamap && viewItem =~ /^datamap-attribute-/",
          "group": "1_modification@3"
        },
        {
          "command": "soar.addOperator",
          "when": "view == soarLayout && viewItem =~ /^layout-(operator-root|folder|high-level-operator|high-level-file-operator)$/",
          "group": "1_add@1"
        },
        {
          "command": "soar.addSubstate",
          "when": "view == soarLayout && viewItem =~ /^layout-(operator-root|folder|high-level-operator|high-level-file-operator)$/",
          "group": "1_add@2"
        },
        {
          "command": "soar.addFile",
          "when": "view == soarLayout && viewItem =~ /^layout-(operator-root|folder|high-level-operator|high-level-file-operator)$/",
          "group": "1_add@3"
        },
        {
          "command": "soar.addFolder",
          "when": "view == soarLayout && viewItem =~ /^layout-(operator-root|folder|high-level-operator|high-level-file-operator)$/",
          "group": "1_add@4"
        },
        {
          "command": "soar.renameNode",
          "when": "view == soarLayout && viewItem =~ /^layout-/ && viewItem != layout-operator-root",
          "group": "2_modify@1"
        },
        {
          "command": "soar.deleteNode",
          "when": "view == soarLayout && viewItem =~ /^layout-/ && viewItem != layout-operator-root",
          "group": "2_modify@2"
        },
        {
          "command": "soar.viewDatamap",
          "when": "view == soarLayout && viewItem =~ /^layout-(operator-root|high-level-operator|high-level-file-operator|high-level-impasse-operator)$/",
          "group": "3_datamap@1"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Soar",
      "properties": {
        "soar.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of problems to report per file"
        },
        "soar.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "lint:md": "markdownlint '*.md' 'doc/*.md' --fix",
    "check:links": "markdown-link-check README.md && find doc -name '*.md' -exec markdown-link-check {} \\;",
    "format": "prettier --write 'src/**/*.ts' '*.md' 'doc/*.md' '*.json'",
    "format:check": "prettier --check 'src/**/*.ts' '*.md' 'doc/*.md' '*.json'",
    "test": "node ./out/test/runTest.js",
    "test:ci": "xvfb-run -a node ./out/test/runTest.js",
    "package": "vsce package",
    "precommit": "npm run lint && npm run format:check && npm run lint:md"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.40.0",
    "glob": "^10.0.0",
    "markdown-link-check": "^3.12.1",
    "markdownlint-cli": "^0.46.0",
    "mocha": "^10.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
