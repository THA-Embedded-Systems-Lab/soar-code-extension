{
  "Soar Production": {
    "prefix": "sp",
    "body": [
      "sp {${1:production-name}",
      "   (state <s> ^${2:attribute} ${3:value})",
      "-->",
      "   (<s> ^${4:result} ${5:value})",
      "}"
    ],
    "description": "Create a new Soar production"
  },
  "Operator Proposal": {
    "prefix": "propose",
    "body": [
      "sp {propose*operator*${1:operator-name}",
      "   (state <s> ^type state",
      "              ${2:^condition})",
      "-->",
      "   (<s> ^operator <o> +)",
      "   (<o> ^name ${1:operator-name})",
      "}"
    ],
    "description": "Propose an operator"
  },
  "Operator Application": {
    "prefix": "apply",
    "body": [
      "sp {apply*${1:operator-name}",
      "   (state <s> ^operator <o>)",
      "   (<o> ^name ${1:operator-name})",
      "-->",
      "   ${2:# actions}",
      "}"
    ],
    "description": "Apply an operator"
  },
  "Elaborate State": {
    "prefix": "elaborate",
    "body": [
      "sp {elaborate*${1:name}",
      "   (state <s> ^${2:condition})",
      "-->",
      "   (<s> ^${3:attribute} ${4:value})",
      "}"
    ],
    "description": "Elaborate state attribute"
  },
  "Write Statement": {
    "prefix": "write",
    "body": [
      "(write |${1:message}|)"
    ],
    "description": "Write output"
  },
  "Math Function": {
    "prefix": "math",
    "body": [
      "(${1|+,-,*,/,mod,abs,sqrt,sin,cos,tan,min,max|} ${2:arg1} ${3:arg2})"
    ],
    "description": "Math function"
  },
  "Negation Test": {
    "prefix": "neg",
    "body": [
      "-^${1:attribute}"
    ],
    "description": "Negation test"
  },
  "Disjunction Test": {
    "prefix": "disj",
    "body": [
      "<< ${1:value1} ${2:value2} ${3:value3} >>"
    ],
    "description": "Disjunction (multiple values)"
  },
  "Conjunctive Test": {
    "prefix": "conj",
    "body": [
      "{ ${1:variable} ${2|<,>,<=,>=,<>,=|} ${3:value} }"
    ],
    "description": "Conjunctive test"
  },
  "Goal Production": {
    "prefix": "gp",
    "body": [
      "gp {${1:goal-name}",
      "   (state <s> ^${2:attribute} ${3:value})",
      "-->",
      "   (<s> ^${4:result} ${5:value})",
      "}"
    ],
    "description": "Create a goal production"
  },
  "I/O Link Access": {
    "prefix": "iolink",
    "body": [
      "^io.${1|input-link,output-link|}.${2:attribute}"
    ],
    "description": "Access input or output link"
  },
  "Operator with Preference": {
    "prefix": "oppref",
    "body": [
      "(<s> ^operator <o> + ${1|=,<,>,!,~|} ${2:value})"
    ],
    "description": "Operator with preference"
  },
  "Impasse Elaboration": {
    "prefix": "impasse",
    "body": [
      "sp {elaborate*impasse*${1:name}",
      "   (state <s> ^impasse ${2|tie,conflict,constraint-failure,no-change|}",
      "              ^attribute ${3:operator}",
      "              ^superstate <ss>)",
      "-->",
      "   (<s> ^name ${1:name})",
      "}"
    ],
    "description": "Elaborate impasse"
  },
  "Multi-attribute Test": {
    "prefix": "multi",
    "body": [
      "(<${1:var}> ^${2:attr1} ${3:val1}",
      "        ^${4:attr2} ${5:val2}",
      "        ^${6:attr3} ${7:val3})"
    ],
    "description": "Multiple attributes on same identifier"
  },
  "Deep Path": {
    "prefix": "path",
    "body": [
      "^${1:attr1}.${2:attr2}.${3:attr3}"
    ],
    "description": "Deep attribute path"
  },
  "Comment Block": {
    "prefix": "comment",
    "body": [
      "# ${1:description}",
      "# ${2:more details}",
      "$0"
    ],
    "description": "Comment block"
  }
}
